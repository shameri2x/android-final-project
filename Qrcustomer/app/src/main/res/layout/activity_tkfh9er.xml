<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tkfh9er">

    <TextView
        android:id="@+id/sign"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="تسجيل دخول :"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/name"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/custom_input"
        android:hint="     الاسم الاول :"
        android:shadowColor="#000000" />

    <EditText
        android:id="@+id/last"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_below="@+id/name"
        android:layout_marginStart="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/custom_input"
        android:hint="     الاسم الاخير :"
        android:shadowColor="#000000" />

    <EditText
        android:id="@+id/email"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_below="@+id/last"
        android:layout_marginStart="50dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/custom_input"
        android:hint="       الايميل :"
        android:inputType="textEmailAddress"
        android:shadowColor="#000000"
        android:textAlignment="viewEnd" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_below="@+id/email"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/custom_input"
        android:hint="      رقم الهاتف :"
        android:inputType="number"
        android:shadowColor="#000000"
        android:textAlignment="viewEnd" />

    <EditText
        android:id="@+id/pass2"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_below="@+id/phone"
        android:layout_marginStart="50dp"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/custom_input"
        android:hint="    تاكيد الرقم السري :  "
        android:inputType="numberPassword"
        android:shadowColor="#000000"
        android:textAlignment="viewEnd" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_below="@+id/pass2"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-139dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/custom_input"
        android:hint="       الرقم السري :"
        android:inputType="numberPassword"
        android:shadowColor="#000000"
        android:textAlignment="viewEnd" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass"
        android:layout_marginStart="170dp"
        android:layout_marginTop="157dp"
        android:background="@drawable/group7"
        android:backgroundTint="#000000"
        android:shadowColor="#FFFFFF"
        android:text="تسجيل"
        android:textColor="#F3F0FA"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"/>





</RelativeLayout>