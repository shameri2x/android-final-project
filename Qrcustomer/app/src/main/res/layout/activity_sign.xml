<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign"
    android:background="@drawable/baclground">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#22817E7E"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/sign"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="110dp"
        android:text="تسجيل دخول :"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email"
        android:layout_width="270dp"
        android:layout_height="50sp"
        android:layout_below="@+id/sign"
        android:layout_marginTop="83dp"
        android:background="@drawable/custom_input"
        android:hint="الايميل"
        android:paddingRight="3dp"
        android:layout_centerHorizontal="true"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="270dp"
        android:layout_height="50sp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_input"
        android:hint="الرقم السري"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textSize="20sp"
        android:paddingRight="3dp"
        android:textStyle="bold"
        android:typeface="normal" />

    <Button
        android:id="@+id/next"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/pass"
        android:layout_marginTop="165dp"
        android:background="@color/QRCodeBlackColor"
        android:text="تسجيل"
        android:textSize="24sp"
        android:textColor="@color/QRCodeWhiteColor"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/create"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_below="@+id/pass"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="99dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="112dp"
        android:text="اليس لديك حساب ؟ انشئ حسابا"
        android:textSize="14sp"
        android:clickable="true"/>

    <TextView
        android:id="@+id/forget"
        android:layout_below="@+id/create"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="نسيت كلمة السر ؟"
        android:textAlignment="center"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:textColor="@color/basic"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/alert"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/forget"
        android:layout_marginTop="43dp"
        android:text="  "
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold" />


</RelativeLayout>